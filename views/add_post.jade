form(method="post", action="/post/new")
  fieldset
    legend=title
    .clearfix
      label(for="title") Title
      .input
        input.input-xxlarge#title(type="text", name="post[title]")
    .clearfix
      label(for="post") Post
      .input
        textarea#post.input-xxlarge(name="post[body]", rows="5")
    .actions
      input.btn.primary(type="submit", value="Publish!")
      |
      a.btn(href="/") Cancel
