@import 'nib'
/* reset */
global-reset()
reset-html5()

@media screen
  *
    -moz-box-sizing: type
    -webkit-box-sizing: type
    box-sizing: type

  a
    text-decoration: none
    outline-width: 0
  body, html
    height: 100%

  body
    background: rgb(39, 40,44)
    font-family: "ff-tisa-web-pro", "HelveticaNeue-Light","Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,sans-serif
    font-weight: 400
    font-size: 16px
    color: #666

    > header
      width: 22%
      position: fixed
      opacity: .35
      min-height: 100%
      padding: 40px 0px;
      background: url("/img/noise.png"), -webkit-radial-gradient(top left,150px 150px,rgb(52,54, 59), rgb(39, 40, 44));

      transition(all .2s ease-in)

      h1
        color: #EFEFEF;
        font-size: 2.8em;
        text-shadow: 0 1px #333;
        padding-bottom: 10px;
        padding-left: 15%

        zoom: 1;

        a
          color: #efefef
      h4
        line-height: 2em
        padding-left: 15%
        font-size: 1.1em

        span
          color: #999
          font-weight: bold

      &:hover
        opacity: 1
    nav
      width: 100%
      padding: 20% 0 0 15%
      line-height: 30px

      ul
        li
          a
            color: #EFEFEF;
            text-shadow: 0 1px #333;
            zoom: 1;

    > section.content-col
      float: right
      width: 78%
      min-height: 100%
      background: whitesmoke

      > header
        h1
          font-size: 38.5px
        h4
          width: 100%
          color: #999
          padding: 30px 0
          text-align: center
          line-height: 30px
          position: relative
          border-top: 1px solid #fff
          border-bottom: 1px solid #ddd

      article
        padding: 0 70px 0 40px

        header
          > h1
            font-size: 1.8em
            padding-bottom: 10px
            color: #333
            margin-bottom: 2px
            line-height: 35px;
            text-shadow: 0 1px #ffffff

        > p
          text-align: justify
          font-weight: 400;
          color: #333332;
          font-size: 18px;
          line-height: 1.4;

        footer
          border-bottom: 1px solid #ddd

      footer
        padding: 30px 0
        text-align: center
        font-size: .9em
        width: 100%

@media screen and (max-width: 1000px)
  body > header
    h1
      font-size: 2.2em
    h4
      line-height: 2;
      font-size: 0.9em;

@media screen and (max-width: 700px)
  body > header
      position: relative
      float: none
      width: 100%
      min-height: auto
      background: -webkit-radial-gradient(top center,150px 90px,rgb(52,54, 59), rgb(39, 40, 44));

      h1, h4
        text-align: center;
        padding-left: 0

      h1
        font-size: 2.8em
      h4
        font-size: 1.1em

      nav
        text-align: center
        padding: 10px 0px
        padding-left: 0
        ul
          li
            display: inline
            margin-right: 10px

  body > section.content-col
    float: none
    width: 100%

@media handheld
  body > header
    opacity: .8
